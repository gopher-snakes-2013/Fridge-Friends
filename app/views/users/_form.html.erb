<div class='name-field'>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div class='text-field'>
  <%= form.label :email %>
  <%= form.text_field :email, :type => 'email' %>
</div>

<div class='password-field'>
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class='phone_number-field'>
  <%= form.label :phone_number %>
  <%= form.text_field :phone_number, placeholder: '1234561234' %>
</div>

<div class='customer_id-field'>
  <%= form.label "Trader Joe's customer id number" %>
  <%= form.text_field :customer_id %>
</div>